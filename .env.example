# SomaAI Environment Configuration

# Application
APP_NAME=SomaAI
VERSION=0.1.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database
# Development: Use Docker PostgreSQL
DATABASE_URL=postgresql+asyncpg://somaai:somaai@localhost:5432/somaai

# Production: We Use NeonDB (uncomment and set your connection string)
# DATABASE_URL=postgresql+asyncpg://user:password@ep-xxx.neon.tech/somaai?sslmode=require

# Redis (Caching & Jobs)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=somaai_documents

# Storage
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./uploads
GDRIVE_CREDENTIALS_PATH=
GDRIVE_FOLDER_ID=

# Background Jobs
QUEUE_BACKEND=redis

# Cache TTLs (seconds)
CACHE_QUERY_TTL=86400
CACHE_EMBEDDING_TTL=604800
CACHE_RETRIEVAL_TTL=3600
CACHE_SESSION_TTL=3600

# Semantic Cache
CACHE_SEMANTIC_ENABLED=true
CACHE_SIMILARITY_THRESHOLD=0.92
CACHE_EMBEDDING_DIM=768
CACHE_NAMESPACE=somaai

# LLM Provider
LLM_BACKEND=mock
OPENAI_API_KEY=
OPENAI_MODEL=""
GROQ_API_KEY=""
GROQ_MODEL=""
HUGGINGFACE_API_KEY=""
